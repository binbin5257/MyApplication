<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/car_detail_group_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/top_back_iv"
            android:layout_width="@dimen/top_bar_height"
            android:layout_height="@dimen/top_bar_height"
            android:scaleType="centerInside"
            android:src="@drawable/top_back"/>

        <View
            android:layout_width="@dimen/commons_dimens_line"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/top__iv"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:contentDescription="action_settings"/>

            <RelativeLayout
                android:id="@+id/top_menu_lyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/top_menu_extend_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="14dp"
                    android:textColor="@color/white"/>

                <ImageView
                    android:id="@+id/top_menu_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="14dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/top_title_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="32dp"
                android:layout_toLeftOf="@+id/top_menu_lyt"
                android:ellipsize="middle"
                android:gravity="center"
                android:singleLine="true"
                android:text="sadfasdf"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </RelativeLayout>
    </LinearLayout>
</layout>