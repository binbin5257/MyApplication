<?xml version="1.0" encoding="utf-8"?><!-- Android中图形图像资源定义，既然要当做一个图像来定义，那么它应该放在drawable目录下，并且以其文件基本名作为其引用 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 图形填充颜色 -->
    <solid android:color="#FF6161"/>
    <!-- 边界线宽度及颜色 -->
    <stroke
        android:width="0dp"
        android:color="#FF6161"/>
    <!-- 圆角大小，以圆的半径表示 -->
    <corners android:radius="10dp"/>
    <!-- 图形内部边距 -->
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"/>
</shape>


