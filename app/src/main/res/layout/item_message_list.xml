<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FF1C1D30">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <TextView
            android:id="@+id/item_message_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:singleLine="true"
            android:text="消息标题消息标题消息标题消息标题消息标题消息标题消息标题消息标题消息标题消息标题消息标题消息标题消息标题消息标题"
            android:textSize="15sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/item_message_content"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_message_name"
            android:singleLine="true"
            android:textColor="#FF8D8D97"
            android:text="消消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容息内容"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"/>
        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/bg_read"/>
        <TextView
            android:id="@+id/item_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:singleLine="true"
            android:text="20190921 15:05"
            android:textColor="#FF8D8D97"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2F304D"
            android:layout_alignParentBottom="true"
            />
        <TextView
            android:id="@+id/item_message_type"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textSize="12sp"
            android:text=""/>
    </RelativeLayout>
</RelativeLayout>

