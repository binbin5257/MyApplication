<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color">
        <include layout="@layout/top_bar"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_about">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_about_logo"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <cn.lds.widget.CommonLayout
            android:id="@+id/version_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:name="版本详情"
            app:nameColor="@color/white"
            app:contentColor="@color/white"
            app:arrowRightVisiblity="true"
            />
       <!-- <cn.lds.widget.CommonLayout
            android:id="@+id/version_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:name="版本更新"
            app:nameColor="@color/white"
            app:contentColor="@color/white"
            app:arrowRightVisiblity="true"
            />
        <cn.lds.widget.CommonLayout
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:name="去评分"
            app:nameColor="@color/white"
            app:contentColor="@color/white"
            app:arrowRightVisiblity="true"
            />-->
    </LinearLayout>
</layout>
