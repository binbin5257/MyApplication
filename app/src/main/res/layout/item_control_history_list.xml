<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rect_corners_list"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        >

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启车门"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="19sp"
            android:textColor="#B2B7D8"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_type"
            android:layout_alignStart="@+id/tv_type"
            android:layout_below="@+id/tv_type"
            android:text="操作成功"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:12:23"
            android:textColor="#B2B7D8"
            android:textSize="12sp"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/iv_resulet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/bg_red_failure"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"/>

    </RelativeLayout>



</RelativeLayout>

