<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_collections_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:textColor="#FF6B6B6B"
            android:text="大连市旅顺口区龙王塘街道星月湾"/>
        <TextView
            android:id="@+id/item_collections_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdjfkljjjjjjjjjjasdjfkljjjjjjjjjjjjjjjjlasdfjadslfkjaklsdfjaldsfkajsdflasjdfkjjjjjjlasdfjadslfkjaklsdfjaldsfkajsdflasjdfk"
            android:layout_below="@id/item_collections_name"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="16dp"
            android:textSize="12sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:background="#FFE5E5E5"
            android:layout_below="@+id/item_collections_address"/>
        <ImageView
            android:id="@+id/iv_post_poi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/map_search_post_poi"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            />

    </RelativeLayout>

</LinearLayout>
